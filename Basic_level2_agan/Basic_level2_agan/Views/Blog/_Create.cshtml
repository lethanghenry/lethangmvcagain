@model Basic_level2_agan.Models.Blog


<!DOCTYPE html>
<html>
<head>
    <style>
        .form-control {
            max-width: 100%;
        }
        .form-group {
            max-width: 100%;
        }
        .card {
            background: #696969;
            padding-left: 15px;
            padding-right: 15px;
        }
        .main
        {
            background:white;
        }
        .row {
            margin-left: 20px;
            margin-right: 10px;
            padding-top: 10px;
        }
        .card-header {
            background: #CCCCCC;
        }
       .card-header h3 {
                margin: 0px !important;
                padding-right: 0px !important;
        }
       .card-body
       {
           background:white;
       }
       .radio
       {
           border:0px;
       }
    </style>
</head>

<body>


    @using (Html.BeginForm())
    {
@Html.AntiForgeryToken()



                <div class="main">

                    <div class="card">
                        <div class="row" >
                            <div class="card-header col-md-12" >
                                <h3 >Create Blogs</h3>
                            </div>
                            <div class="card-body col-md-12 ">
                                @Html.ValidationSummary(false)
                                @Html.HiddenFor(model => model.id)
                                <div class="row">
                                    <div class="form-group col-md-12">
                                        @Html.LabelFor(model => model.tin)

                                        @Html.TextAreaFor(model => model.tin, new { @class = " form-control" })
                                        @Html.ValidationMessageFor(model => model.tin)

                                    </div>
                                </div>


                                <div class="row">
                                    <div class="form-group col-md-12">
                                        @Html.LabelFor(model => model.motangan)


                                        @Html.TextAreaFor(model => model.motangan, new { @class = " form-control" })
                                        @Html.ValidationMessageFor(model => model.motangan)

                                    </div>
                                </div>

                                <div class="row">
                                    <div class="form-group col-md-12">
                                        @Html.LabelFor(model => model.chitiet)


                                        @Html.TextAreaFor(model => model.chitiet, new { @class = " form-control" })
                                        @Html.ValidationMessageFor(model => model.chitiet)

                                    </div>
                                </div>

                                <div class="row">
                                    <div class="form-group col-md-12">
                                        @Html.Label("Hình Ảnh")

                                        <input type="submit" value="Chọn Tệp" class="btn btn-default" />
                                        @Html.Label("Không có tệp nào được chọn")
                                    </div>
                                </div>


                                <div class="row">
                                    <div class="form-group col-md-12">
                                        @Html.LabelFor(model => model.trangThai)
                                    </div>
                                </div>
                                <div class=" radio row">


                                    <div class="col-md-2">
                                        @Html.RadioButtonFor(model => model.trangThai, "Yes")
                                        @Html.Label("Yes")
                                    </div>
                                    <div class="col-md-2">
                                        @Html.RadioButtonFor(model => model.trangThai, "No")
                                        @Html.Label("No")
                                    </div>

                                    @Html.ValidationMessageFor(model => model.trangThai)

                                </div>


                                <div class="row">
                                    @Html.LabelFor(model => model.viTri)
                                </div>
                                <div class="row">
                                    <div class="form-group col-md-12">

                                        <div class="col-md-2">
                                            <input type="checkbox" name="viTri" value="VietNam">Việt Nam
                                        </div>
                                        <div class="col-md-2">
                                            <input type="checkbox" name="viTri" value="ChauA">Châu Á
                                        </div>
                                        <div class="col-md-2">
                                            <input type="checkbox" name="viTri" value="ChauAu">Châu Âu
                                        </div>
                                        <div class="col-md-2">
                                            <input class="col-md-2" type="checkbox" name="viTri" value="ChauMy">Châu Mỹ
                                        </div>


                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        @Html.LabelFor(model => model.loai)
                                    </div>
                                    <div class="col-md-6">
                                        @Html.LabelFor(model => model.ngayPublic)
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            @{ List<SelectListItem> listItems = new List<SelectListItem>();
                                                listItems.Add(new SelectListItem
                                                {
                                                    Text = "Kinh Doanh",
                                                    Value = "Kinh Doanh"
                                                });
                                                listItems.Add(new SelectListItem
                                                {
                                                    Text = "Thế Giới",
                                                    Value = "Thế Giới",
                                                    Selected = true
                                                });
                                                listItems.Add(new SelectListItem
                                                {
                                                    Text = "Thời Sự",
                                                    Value = "Thời Sự"
                                                }); }

                                            @Html.DropDownListFor(model => model.loai, listItems, "-- Select Status --")



                                            @Html.ValidationMessageFor(model => model.loai)

                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            @Html.EditorFor(model => model.ngayPublic, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.ngayPublic)

                                        </div>
                                    </div>
                                </div>


                            </div>

                            <div class="card-footer" style="background:#CCCCCC!important;">
                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" value="Create" class="btn btn-default" />

                                    </div>

                                </div>
                            </div>


                        </div>

                    </div>
                </div>}


    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }

</body>
</html>


